<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:padding="8dp"
        android:layout_marginLeft="16dp"
        android:scaleType="centerCrop"
        android:id="@+id/local_video_img"
        android:layout_width="90dp"
        android:layout_height="90dp" />
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_centerVertical="true"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_toRightOf="@id/local_video_img"
       android:layout_marginLeft="8dp"
       >
       <TextView
           android:id="@+id/local_video_name"
           android:text="name"
           android:textSize="18sp"
           android:textColor="#000"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           />
       <TextView
           android:id="@+id/local_video_time"
           android:text="name"
           android:textSize="16sp"
           android:textColor="#9696a6"
           android:layout_marginTop="5dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           />
   </LinearLayout>
    <TextView
        android:id="@+id/local_video_size"
        android:text="size"
        android:textSize="16sp"
        android:textColor="#9696a6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_alignBottom="@id/local_video_img"
        />
    <View
        android:layout_below="@id/local_video_img"
        android:layout_width="match_parent"
        android:background="#6b6b87"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="8dp"
        android:layout_height="1dp"/>

</RelativeLayout>